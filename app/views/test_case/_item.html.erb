<div class="row-fluid">
	<div class="span3">
		<button class="btn btn-medium btn-primary" id="btn-add-item" type="button"><i class="icon-plus"></i> Add an Item</button>
	</div>
	<div class="span3">
		Item Count: 1
	</div>
</div>

<div class="row-fluid">
	<div class="span6" id="item-wrapper">
		<div class="row-fluid">
			<h2 class="text-center">Item 1</h2>
			<div class="span5">Item URL</div>
			<div class="span5">
				<input type="text" class="input-medium" placeholder="Paste URL here">
			</div>
			<div class="span5">Item Quantity</div>
			<div class="span5">
				<select class="input-medium">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
				</select>
			</div>
			<div class="span5">Item Size</div>
			<div class="span5">
				<input type="text" class="input-medium" placeholder="Enter size here">
			</div>
		</div>
	</div>
</div>