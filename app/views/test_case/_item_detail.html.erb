<script id="item-template" type="text/x-handlebars-template">
	<div class="row-fluid">
		<h2 class="text-center">Item {{itemCount}}</h2>
		<div class="span5">Item URL</div>
		<div class="span5">
			<input type="text" class="input-medium" name="item-{{itemCount}}-name" placeholder="Paste URL here">
		</div>
		<div class="span5">Item Quantity</div>
		<div class="span5">
			<select class="input-medium" name="item-{{itemCount}}-quantity">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</div>
		<div class="span5">Item Size</div>
		<div class="span5">
			<input type="text" class="input-medium" name="item-{{itemCount}}-size" placeholder="Enter size here">
		</div>
	</div>
</script>